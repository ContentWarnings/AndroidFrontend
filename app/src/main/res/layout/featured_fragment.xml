<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <ProgressBar
        android:id="@+id/loading_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@color/loading_circle"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/all_featured_movies_filtered_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/all_featured_movies_filtered_out_text_margin_horizontal"
        android:text="@string/all_trending_movies_filtered_out"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/all_featured_movies_filtered_out_text"
        android:textSize="@dimen/all_featured_movies_filtered_out_text_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trending_movies_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/trending_movie_list_margin_horizontal">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>