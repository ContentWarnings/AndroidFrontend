<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/genre_row_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/genre_row_margin_vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/genre_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedCornersGenreBackground" />

    <TextView
        android:id="@+id/genre_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/genre_name_text_size"
        android:textStyle="bold"
        android:textColor="@color/genre_name">
    </TextView>

</FrameLayout>