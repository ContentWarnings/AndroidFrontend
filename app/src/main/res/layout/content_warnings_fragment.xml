<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@color/loading_circle"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/content_warnings_empty_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="@string/content_warnings_empty_search_text"
        android:textSize="@dimen/content_warnings_empty_search_text_size"
        android:textColor="@color/content_warnings_empty_search_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/content_warnings_settings_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_background"/>

</RelativeLayout>