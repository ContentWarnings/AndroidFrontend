<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/genre_filter_button_corner_radius" />
            <padding android:left="@dimen/genre_filter_button_padding_horizontal"
                android:right="@dimen/genre_filter_button_padding_horizontal" />
            <gradient android:startColor="@color/search_filter_button_checked_start_gradient"
                android:type="linear" android:endColor="@color/search_filter_button_checked_end_gradient" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/search_filter_button_unchecked" />
            <corners android:radius="@dimen/genre_filter_button_corner_radius" />
            <stroke android:width="@dimen/genre_filter_button_border_width"
                android:color="@color/genre_filter_button_unchecked_border" />
            <padding android:left="@dimen/genre_filter_button_padding_horizontal"
                android:right="@dimen/genre_filter_button_padding_horizontal" />
        </shape>
    </item>
</selector>